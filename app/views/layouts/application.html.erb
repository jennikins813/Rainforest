<!DOCTYPE html>
<html>
	<head>
	  <title>Rainforest</title>
	  <%= stylesheet_link_tag    "application" => true %>
	  <%= javascript_include_tag "application" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
	<b><%= link_to "Log in", new_session_path %></b> | 
	<b><%= link_to "Sign up", new_user_path %></b>	|

	
		<div class="nav">
		<h1><%= link_to 'Rainforest', products_url %></h1>

			<% if flash[:notice] %>
				<p id="notice"><%= flash[:notice] %></p>
			<% end %>	
			<% if flash[:alert] %>
				<p id="alert"><%= flash[:alert] %></p>
			<% end %>	
		</div>	

		<%= yield %>

			<p class="userinfo">
				<% if current_user %>
					Signed in as <b><%= current_user.name %></b> <br /> 
					
					
					<%= link_to "Log out", session_path("current"), :method => :delete %>
				
				<% end %>
			</p>		

	</body>
</html>
