<!DOCTYPE html>
<html>
	<head>
	  <title>Rainforest</title>
	  <%= stylesheet_link_tag    "application", media: "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
	<b><%= link_to "Log in", new_session_path %></b> | 
	<b><%= link_to "Sign up", new_user_path %></b>	|

	
		<div class="nav">
		<h1><%= link_to 'Rainforest', root_url %></h1>

			<% if flash[:notice] %>
				<p id="notice"><%= flash[:notice] %></p>
			<% end %>	
			<% if flash[:alert] %>
				<p id="alert"><%= flash[:alert] %></p>
			<% end %>	
		</div>	

		<%= yield %>

			<p class="userinfo">
				<% if current_user %>
					Signed in as <b><%= link_to current_user.name, user_path(current_user.id) %></b> <br /> 
					
					
					<b><%= link_to "Edit User", edit_user_path(current_user.id) %></b> |
					<%= link_to "Log out", session_path("current"), :method => :delete %>
				
				<% end %>
			</p>		

	</body>
</html>
