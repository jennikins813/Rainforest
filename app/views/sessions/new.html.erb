<h1>Log in</h1>

<%= form_tag sessions_path do %>
<!--using form_tag bcoz there is no session model-->
	<div class="field">
		<%= label_tag :email %><br>
		<%= text_field_tag :email, params[:email] %>
	</div>

	<div class="field">
		<%= label_tag :password %><br>
		<%= password_field_tag :password %>
	</div>

	<div class="actions">
		<%= submit_tag "Log in" %>
	</div>
<% end %>	

